{
    "version": 2,
    "builds": [
        {
            "src": "backend/main_tfidf.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/main_tfidf.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ],
    "env": {
        "OPENAI_API_KEY": "@openai_api_key"
    }
}