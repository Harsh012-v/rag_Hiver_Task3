{
    "version": 2,
    "builds": [
        {
            "src": "backend/main_tfidf.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/main_tfidf.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}